{
    "name": "swagger-hell-plugin",
    "license": "MIT",
    "scripts": {
        "build": "yarn clean:bin && yarn build:dist && yarn build:bin && yarn build:target",
        "build:dist": "tsc",
        "build:bin": "pkg ./dist/src/resolver/inter-process-communication.js --out-path ./bin",
        "build:target": "tsx ./scripts/target-bin.ts",
        "dev": "tsx src/main.ts",
        "dev:dist": "node ./dist/src/resolver/inter-process-communication.js",
        "test": "tsx src/test.ts",
        "test:ipc": "echo '{\"query\":\"query ($a:Int!,$b:Int!){ add(a:$a,b:$b) }\",\"variables\":{\"a\":5,\"b\":2}}' | tsx ./src/resolver/inter-process-communication.ts",
        "type:check": "tsc --noEmit",
        "clean:bin": "rm -rf ./dist ./bin"
    },
    "dependencies": {
        "graphql": "^16.12.0",
        "openapi-typescript": "^7.10.1"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@yao-pkg/pkg": "^6.11.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}